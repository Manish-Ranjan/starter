{
    "extends": "@medly/typescript-config",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@routes": ["routes"],
            "@routes/*": ["routes/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"],
            "@middleware": ["middleware"],
            "@middleware/*": ["middleware/*"],
            "@constants": ["constants"],
            "@constants/*": ["constants/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
